---
interface Props {
	title: string;
	body: string;
	href: string;
	tldr: string[];
	tech: string[];
}

const { href, title, body, tldr, tech } = Astro.props;
---

<div
	class="flex p-3 bg-ass-black-400 hover:opacity-80 rounded-md border border-[#31343a]"
>
	<a href={href}>
		<h2 class="text-gray-200">
			{title}
		</h2>
		<p class="text-gray-400">
			{body}
		</p>

		<div class="text-gray-400 font-bold mt-6">TLDR</div>
		<ul class="text-gray-400 list-disc ml-4">
			{tldr.map((item) => <li>{item}</li>)}
		</ul>

		<div class="text-gray-400 font-bold mt-6">Tech Stack</div>
		<ul class="text-gray-400 list-disc ml-4">
			{tech.map((techItem) => <li>{techItem}</li>)}
		</ul>
	</a>
</div>
<style>
	.link-card {
		/* list-style: none; */
		/* display: flex; */
		/* padding: 1px; */
		/* background-color: #23262d; */
		/* background-image: none; */
		/* background-size: 400%; */
		/* border-radius: 7px; */
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>
